<div class="container-fluid mt-5">
    <div>
        <div class="d-flex justify-content-end mr-5 my-2">
            <form action="/todo/<%=todo.id%>" accept-charset="UTF-8" method="post">
                <input type="hidden" name="_method" value="put" />
                <fieldset class="form-group">
                    <div class="row">
                      <legend class="col-form-label col-sm-6 pt-0">Is Done</legend>
                      <div class="col-sm-10">
                        <div class="form-check">
                          <input class="form-check-input" type="radio" name="is_done" value="true" checked>
                          <label class="form-check-label" for="gridRadios1">
                            Done
                          </label>
                        </div>
                        <div class="form-check">
                          <input class="form-check-input" type="radio" name="is_done" value="false">
                          <label class="form-check-label" for="gridRadios2">
                            Not Done
                          </label>
                        </div>
                      </div>
                    </div>
                  </fieldset>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
    <div>
        <table class="table">
            <tbody>
                <tr>
                    <th scope="row">Title</th>
                    <td>
                        <%= todo.title %>
                    </td>
                </tr>
                <tr>
                    <th scope="row">Description</th>
                    <td>
                        <%= todo.description %>
                    </td>
                </tr>
                <tr>
                    <th scope="row">Assigned User</th>
                    <td>
                        <%= todo.assigned_to %>
                    </td>
                </tr>
                <tr>
                    <th scope="row">Is Done</th>
                    <td>
                        <%= todo.is_done %>
                    </td>
                </tr>
                <tr>
                    <th scope="row">Is Deleted</th>
                    <td>
                        <%= todo.is_deleted %>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>